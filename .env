# 应用配置
APP_NAME=SignAI Platform
APP_VERSION=1.0.0
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite:///./signai.db
DATABASE_ECHO=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# 模型路径配置
MODEL_BASE_PATH=./models
SIGN_LANGUAGE_MODEL_PATH=./models/sign_language
VOICE_RECOGNITION_MODEL_PATH=./models/whisper
VOICE_CLONE_MODEL_PATH=./models/voice_clone
TRANSLATION_MODEL_PATH=./models/translation

# API 配置
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# JWT 配置
SECRET_KEY=your-secret-key-change-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
ALLOWED_VIDEO_FORMATS=["mp4","avi","mov","mkv"]
ALLOWED_AUDIO_FORMATS=["mp3","wav","ogg","m4a"]

# WebSocket 配置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 翻译配置
DEFAULT_SOURCE_LANG=zh
DEFAULT_TARGET_LANG=en